<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                x:Class="WPFBinding.BindingOneWayToSource">
    <StackPanel>
        <!-- Source pre BINDING. -->
        <!-- Pouzijem REVERZNY BIDNING OneWayToSource. -->
        <ScrollBar Value="{Binding ElementName=MLabel, Path=Content, Mode=OneWayToSource}" Orientation="Horizontal" Margin="24" Maximum="100" LargeChange="10" SmallChange="1" />

        <!-- Target pre BINDING.-->
        <Label Name="MLabel" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>