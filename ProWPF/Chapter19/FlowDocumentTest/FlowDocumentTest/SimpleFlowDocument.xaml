<Window x:Class="FlowDocumentTest.SimpleFlowDocument"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SimpleFlowDocument" Height="300" Width="300">
    <StackPanel>
        <!-- Umozni scrolling. -->
        <FlowDocumentScrollViewer>
            <!-- Zakladny FlowDocument. -->
            <FlowDocument>
                <!-- Dve Paragraphs. -->
                <Paragraph>Hello, world of documents.</Paragraph>
                <Paragraph>This is a second paragraph.</Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </StackPanel>
</Window>