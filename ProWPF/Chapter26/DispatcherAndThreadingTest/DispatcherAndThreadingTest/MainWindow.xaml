<Window x:Class="DispatcherAndThreadingTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DispatcherAndThreadingTest" Height="300" Width="400">
  <StackPanel>
    <Label Name="MLabel1" Content="Empty"/>
    <Label Name="MLabel2" Content="Empty"/>
    <Button Click="OnCreateNewWindow" Content="Create Window In New Thread"/>
    <Button Click="OnSynchronousCreateNewWindow" Content="Increment Label From Second Thread - SYNCHRONOUSLY"/>
    <Button Click="OnAsynchronousCreateNewWindow" Content="Increment Label From Second Thread - ASYNCHRONOUSLY"/>
  </StackPanel>
</Window>