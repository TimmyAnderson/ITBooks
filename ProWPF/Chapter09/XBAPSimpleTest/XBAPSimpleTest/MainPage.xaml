<Page x:Class="XBAPSimpleTest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainPage">
  <StackPanel>
    <Popup Name="MDialogPopup" StaysOpen="True" Placement="Center" MaxWidth="200">
      <Border BorderBrush="Beige" BorderThickness="2" Background="White">
        <StackPanel>
          <Label Content="This is a XAML Popup !"/>
          <Button Click="OnPopupClose" Content="Close Popup"/>
        </StackPanel>
      </Border>
    </Popup>
    <Label Content="This is a MainPage (ver. A) !"/>
    <Button Click="OnSubPageClick" Content="Go to SubPage"/>
    <Button Click="OnShowDialogBoxClick" Content="Show Dialog Box"/>
    <Button Click="OnBrowseFileSystemClick" Content="Browse File System"/>
    <Button Click="OnShowPopup1Click" Content="Show XAML Popup"/>
    <Button Click="OnShowPopup2Click" Content="Show C# Popup"/>
    <Button Click="OnBrowseFileSystemWithSecurityCheckClick" Content="Browse File System With Security Check"/>
    <StackPanel>
      <Border BorderThickness="5" BorderBrush="Aqua">
        <StackPanel>
          <TextBox Name="MTextToStore"/>
          <Button Click="OnLoadDataFromISClick" Content="Load Text From IS"/>
          <Button Click="OnSaveDataToISClick" Content="Save Text From IS"/>
        </StackPanel>          
      </Border>
    </StackPanel>
  </StackPanel>
</Page>