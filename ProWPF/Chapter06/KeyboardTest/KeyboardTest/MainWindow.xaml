<Window x:Class="KeyboardTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="KeyboardTest" Height="300" Width="300">
  <StackPanel>
    <Label Content="Enter some Text:"/>
    <TextBox Name="MTextBox" PreviewKeyDown="OnTextBoxPreviewKeyDown" PreviewKeyUp="OnTextBoxPreviewKeyUp" PreviewTextInput="OnTextBoxPreviewTextInput" KeyDown="OnTextBoxKeyDown" KeyUp="OnTextBoxKeyUp" TextInput="OnTextBoxTextInput" TextChanged="OnTextBoxTextChanged"/>
    <Button Name="MButton" PreviewKeyDown="OnButtonPreviewKeyDown" PreviewKeyUp="OnButtonPreviewKeyUp" PreviewTextInput="OnButtonPreviewTextInput" KeyDown="OnButtonKeyDown" KeyUp="OnButtonKeyUp" TextInput="OnButtonTextInput" Content="Key Button"/>
    <Button Name="MButtonGetPressedKyes" Click="OnGetPressedKeys" Content="Get Pressed Keys"/>
  </StackPanel>
</Window>