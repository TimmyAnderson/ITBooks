<Window x:Class="AligningAndPaddingTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AligningAndPaddingTest" Height="400" Width="300">
  <StackPanel>
    <Button Height="30" Content="Button"/>
    <Button Height="30" Content="Button" HorizontalAlignment="Left"/>
    <Button Height="30" Content="Button" HorizontalAlignment="Right"/>
    <Button Height="30" Content="Button" HorizontalContentAlignment="Left"/>
    <Button Height="30" Content="Button" HorizontalContentAlignment="Right"/>
    <Button Height="30" Content="Button" VerticalAlignment="Top"/>
    <Button Height="30" Content="Button" VerticalAlignment="Bottom"/>
    <Button Height="30" Content="Button" VerticalContentAlignment="Top"/>
    <Button Height="30" Content="Button" VerticalContentAlignment="Bottom"/>
    <Button Height="30" Content="Button" Padding="100,0,0,0"/>
  </StackPanel>
</Window>