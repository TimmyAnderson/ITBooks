<Window x:Class="TreeViewTestClient.SimpleTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="TreeViewTestClient" Height="300" Width="300">
  <StackPanel>
    <TreeView>
      <!-- Na obalenie pouzivam TreeViewItem, aj ked by som nemusel. -->
      <TreeViewItem Header="Fruit">
        <TreeViewItem Header="Orange"/>
        <TextBox Text="Apricot"/>
        <TreeViewItem Header="Banana"/>
        <TreeViewItem Header="Grapefruit"/>
      </TreeViewItem>
      <TreeViewItem Header="Vegetables">
        <TreeViewItem Header="Aubergine"/>
        <TreeViewItem Header="Squash"/>
        <TreeViewItem Header="Spinach"/>
        <Button Content="Cabbage"/>
      </TreeViewItem>
    </TreeView>
  </StackPanel>
</Window>