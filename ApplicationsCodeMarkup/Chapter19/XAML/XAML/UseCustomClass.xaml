<!-- Deklarujem CUSTOM CLR NAMESPACE. -->
<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:XAML" 
        x:Class="XAML.UseCustomClass"
        Title="Use Custom Class"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize">
    <StackPanel Orientation="Horizontal">
        <Button HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="24">
            Do-nothing button to test tabbing
        </Button>

        <!-- Pouzijem CUSTOM CLASS. -->
        <src:CColorGridBox HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          Margin="24"
                          SelectionChanged="ColorGridBoxOnSelectionChanged" />

        <Button HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="24">
            Do-nothing button to test tabbing
        </Button>
    </StackPanel>
</Window>