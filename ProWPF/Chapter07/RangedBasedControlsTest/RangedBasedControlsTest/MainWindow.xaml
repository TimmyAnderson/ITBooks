<Window x:Class="RangedBasedControlsTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="RangedBasedControlsTest" Height="500" Width="300">
  <StackPanel>
    <Slider Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" TickPlacement="BottomRight"/>
    <Slider Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="25" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
    <Slider Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" TickPlacement="BottomRight" IsSelectionRangeEnabled="True" SelectionStart="20" SelectionEnd="50"/>
    <Slider Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" Ticks="1,25,66,75,90" TickPlacement="BottomRight"/>
    <Slider Orientation="Vertical" Height="100" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10" TickFrequency="10" TickPlacement="BottomRight"/>
    <ScrollBar Orientation="Horizontal" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10"/>
    <ScrollBar Height="100" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10"/>
    <ProgressBar Value="30" Height="20" Minimum="0" Maximum="100" SmallChange="1" LargeChange="10"/>
    <ProgressBar IsIndeterminate="True" Height="20" SmallChange="1" LargeChange="10"/>
  </StackPanel>
</Window>