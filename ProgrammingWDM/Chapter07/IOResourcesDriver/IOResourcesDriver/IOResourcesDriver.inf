;-----------------------------------------------------------------------------------------------------------------------
[Version]
Signature="$WINDOWS NT$"
Class=MySamples
ClassGuid={7388405C-54FB-4122-A5C9-B5562FA47F20}
Provider=%ManufacturerName%
DriverVer=06/06/2015
CatalogFile=MyCatalog.cat
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
[ClassInstall32]
Addreg=MySamplesClassReg

[MySamplesClassReg]
HKR,,,0,%ClassName%
HKR,,Icon,,-5

[SourceDisksNames]
1=%DiskName%,,,""

[SourceDisksFiles]
IOResourcesDriver.sys=1,,
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
[DestinationDirs]
DefaultDestDir=12

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%IOResourcesDriver.DeviceDesc%=IOResourcesDriver_Device, Root\IOResourcesDriver

[IOResourcesDriver_Device.NT]
CopyFiles=Drivers_Dir
LogConfig=Driver_Config

[Drivers_Dir]
IOResourcesDriver.sys

; Nasledujuca konfiguracia umoznuje DRIVER priradit IO PORT a IRQ.
[Driver_Config]
ConfigPriority=NORMAL
; !!!!! IRQ 0 sposobil, ze sa INTERRUPT nielen korektne zaregistroval, ale sa aj vyvolaval cca KAZDYCH 55 ms. Je to vdaka tomu, ze IRQ 0 je PIP TIMER, ktory vyvolava PERIODICKY INTERRUPTS. WINDOWS bezal pekne aj po REBOOTE ci DISABLE-ENABLE DRIVER.
IRQConfig=0
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
[IOResourcesDriver_Device.NT.Services]
AddService=IOResourcesDriver,0x00000002,IOResourcesDriver_Service_Inst

[IOResourcesDriver_Service_Inst]
DisplayName=%ServiceDescription%
ServiceType=1
StartType=3
ErrorControl=1
ServiceBinary=%12%\IOResourcesDriver.sys
LoadOrderGroup=Extended Base
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
;-----------------------------------------------------------------------------------------------------------------------
[Strings]
ManufacturerName="Timmy Anderson"
ClassName="MySamples"
DiskName="IOResourcesDriver Source Disk"
IOResourcesDriver.DeviceDesc="IOResourcesDriver Device"
ServiceDescription="Service for IOResourcesDriver"
;-----------------------------------------------------------------------------------------------------------------------