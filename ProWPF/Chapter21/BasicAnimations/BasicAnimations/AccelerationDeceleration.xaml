    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BasicAnimations" Height="300" Width="600">
  <StackPanel>
    <Button Name="MButton1" Width="160" MouseEnter="OnMouseEnter1" Content="Acc: 0.3"/>
    <Button Name="MButton2" Width="160" MouseEnter="OnMouseEnter2" Content="Deac: 0.3"/>
    <Button Name="MButton3" Width="160" MouseEnter="OnMouseEnter3" Content="Acc: 0.3, Deac: 0.3"/>
    <Button Name="MButton4" Width="160" MouseEnter="OnMouseEnter4" Content="Acc: 1"/>
    <Button Name="MButton5" Width="160" MouseEnter="OnMouseEnter5" Content="Deac: 1"/>
  </StackPanel>
</Window>