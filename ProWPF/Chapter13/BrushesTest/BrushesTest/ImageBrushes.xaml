<Window x:Class="BrushesTest.ImageBrushes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BrushesTest" Height="400" Width="400">
  <Canvas>
    <Rectangle Canvas.Left="10" Canvas.Top="10"  Width="271" Height="100" Stroke="Black">
      <Rectangle.Fill>
        <ImageBrush ImageSource="Images\Logo.gif" Stretch="None"></ImageBrush>
      </Rectangle.Fill>
    </Rectangle>
    <Rectangle Canvas.Left="10" Canvas.Top="120" Width="200" Height="200" Stroke="Black">
      <Rectangle.Fill>
        <ImageBrush ImageSource="Images\Logo.gif" Stretch="Uniform" Viewbox="0.4 0.5 0.2 0.2"></ImageBrush>
      </Rectangle.Fill>
    </Rectangle>
  </Canvas>
</Window>