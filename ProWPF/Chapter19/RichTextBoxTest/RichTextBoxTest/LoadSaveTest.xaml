<Window x:Class="RichTextBoxTest.LoadSaveTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LoadSaveTest" Height="500" Width="500">
    <ScrollViewer>
        <StackPanel>
            <RichTextBox Name="MRichTextBox">
                <FlowDocument>
                    <Paragraph>
                        <Run>
                            EMPTY !
                        </Run>
                    </Paragraph>
                </FlowDocument>
            </RichTextBox>
            
            <WrapPanel Orientation="Horizontal">
                <Button Content="Load With XamlReader" Click="Button_Click1"/>
                <Button Content="Save With XamlWriter" Click="Button_Click2"/>
                <Button Content="Load XAML with TextRange" Click="Button_Click3"/>
                <Button Content="Save XAML with TextRange" Click="Button_Click4"/>
                <Button Content="Load RTF with TextRange" Click="Button_Click5"/>
                <Button Content="Save RTF with TextRange" Click="Button_Click6"/>
                <Button Content="Load XAML Package with TextRange" Click="Button_Click7"/>
                <Button Content="Save XAML Package with TextRange" Click="Button_Click8"/>
            </WrapPanel>
        </StackPanel>        
    </ScrollViewer>
</Window>