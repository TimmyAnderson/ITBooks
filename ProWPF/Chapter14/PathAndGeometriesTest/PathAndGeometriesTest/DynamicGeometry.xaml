<Window x:Class="PathAndGeometriesTest.DynamicGeometry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PathAndGeometriesTest" Height="300" Width="300">
  <StackPanel>
    <Path Name="MPath" Fill="Yellow" Stroke="Blue">
      <Path.Data>
        <RectangleGeometry Rect="0,0 100,50" RadiusX="10" RadiusY="10"/>
      </Path.Data>
    </Path>

    <Button Click="OnClick" Content="Change Geometry"/>
  </StackPanel>
</Window>