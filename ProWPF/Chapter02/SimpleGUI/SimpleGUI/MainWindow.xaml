<Window x:Class="SimpleGUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="SimpleGUI" Height="300" Width="300">
  <StackPanel>
    <!-- Pouzijem property Name. -->
    <Label Name="MLabel1" Content="Some Text 1"/>
    <TextBox Name="MTextBox1" Text="Some Text 2"/>
    <!-- Pouzijem XAML KEYWORD x:Name. Vysledok je ten isty. -->
    <Label x:Name="MLabel2" Content="Some Text 3"/>
    <TextBox x:Name="MTextBox2" Text="Some Text 4"/>
  </StackPanel>
</Window>