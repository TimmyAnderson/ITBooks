<Window x:Class="AsynchronousCallsSynContextClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="300" Width="300" Closed="Window_Closed">
    <StackPanel Orientation="Vertical">
        <Label Content="Enter some text:"/>
        <TextBox Name="MTXTText"/>
        <Label Content="Result:"/>
        <Label Name="MLABResult"/>
        <Button Name="MBUTSynchronousCall" Content="Synchronous Call" Click="MBUTSynchronousCall_Click"/>
        <Button Name="MBUTAsynchronousCall" Content="Asynchronous Call" Click="MBUTAsynchronousCall_Click"/>
    </StackPanel>
</Window>