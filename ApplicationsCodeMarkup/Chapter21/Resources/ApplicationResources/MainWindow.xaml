<Window x:Class="ApplicationResources.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <!-- Resource 'MThicknessMargin' je definovana v C# kode. -->
        <!-- Resource 'MBrushGradient' je Application class. -->
        <StackPanel>
            <TextBlock Margin="{StaticResource MThicknessMargin}" Foreground="{StaticResource MBrushGradient}">
            Gradient text
            </TextBlock>
            <TextBlock Margin="{StaticResource MThicknessMargin}" Foreground="{StaticResource MBrushGradient}">
            Of black, green, and gold
            </TextBlock>
            <TextBlock Margin="{StaticResource MThicknessMargin}" Foreground="{StaticResource MBrushGradient}">
            Makes an app pretty,
            </TextBlock>
            <TextBlock Margin="{StaticResource MThicknessMargin}" Foreground="{StaticResource MBrushGradient}">
            Makes an app bold.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>