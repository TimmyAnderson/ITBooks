@page
@model ModelBinding.Pages.PageBindNestedComplexTypeModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="~/StaticFiles/Styles/Styles.css" />
	<link rel="stylesheet" href="~/StaticFiles/ClientLibraries/Bootstrap/dist/css/bootstrap.css" />
    <title>PageBindNestedComplexType</title>
</head>
<body>
	<div class="OUTER_BOX">
		<form method="post" asp-page="PageBindNestedComplexType" asp-page-handler="MyHandler">
			@Html.AntiForgeryToken()

			<div class="form-group">
				<label asp-for="Child.FirstName">First name:</label>
				<input class="form-control" asp-for="Child.FirstName"/>
			</div>

			<div class="form-group">
				<label asp-for="Child.LastName">Last name:</label>
				<input class="form-control" asp-for="Child.LastName"/>
			</div>

			<div class="form-group">
				<label asp-for="Child.Age">Age:</label>
				<input class="form-control" asp-for="Child.Age"/>
			</div>

			<div class="form-group">
				<label asp-for="Child.Sex">Sex:</label>
				<select class="form-control" asp-for="Child.Sex" asp-items="@new SelectList(Enum.GetNames(typeof(ESex)))">
				</select>
			</div>

			<div class="form-group">
				<label asp-for="Child.Address.City">City:</label>
				<input class="form-control" asp-for="Child.Address.City" />
			</div>

			<div class="form-group">
				<label asp-for="Child.Address.Country">Country:</label>
				<input class="form-control" asp-for="Child.Address.Country" />
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-sm btn-primary">Add name</button>
			</div>
		</form>
	</div>
</body>
</html>