<Window x:Class="GridAlignmentTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GridAlignmentTest" Height="300" Width="400">
  <Grid ShowGridLines="True">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Button HorizontalAlignment="Left" Content="Button 1" Grid.Column="1" Grid.Row="1"></Button>
    <Button HorizontalAlignment="Right" Content="Button 2" Grid.Column="1" Grid.Row="1"></Button>
    <Button HorizontalAlignment="Left" Margin="5" Content="Button 1" Grid.Column="1" Grid.Row="2"></Button>
    <Label HorizontalAlignment="Center" Margin="5" Content="Hello World !" Grid.Column="1" Grid.Row="2"></Label>
    <Button HorizontalAlignment="Right" Margin="5" Content="Button 2" Grid.Column="1" Grid.Row="2"></Button>
  </Grid>
</Window>