<Window x:Class="ScrollViewerTest.MainWindow5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ScrollViewerTest" Height="300" Width="300">
  <Grid ShowGridLines="True">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <ScrollViewer Grid.Row="0" CanContentScroll="False">
      <StackPanel>
        <Label Content="CanContentScroll - FALSE"/>
        <Button Height="200" Content="Button 1"/>
        <Button Height="100" Content="Button 2"/>
        <Button Height="150" Content="Button 3"/>
        <Button Height="20" Content="Button 4"/>
        <Button Height="75" Content="Button 5"/>
      </StackPanel>
    </ScrollViewer>
    <ScrollViewer Grid.Row="1" CanContentScroll="True">
      <StackPanel>
        <Label Content="CanContentScroll - TRUE"/>
        <Button Height="200" Content="Button 1"/>
        <Button Height="100" Content="Button 2"/>
        <Button Height="150" Content="Button 3"/>
        <Button Height="20" Content="Button 4"/>
        <Button Height="75" Content="Button 5"/>
      </StackPanel>
    </ScrollViewer>
  </Grid>
</Window>