<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Styles.ButtonWithLocalStyle">
    <!-- !!! Foreground ostane na Red, pretoze LOKALNE NASTAVENIE ma PREDNOST pred Style. -->
    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red">
        <Button.Style>
            <Style>
                <Setter Property="Button.FontSize" Value="18pt" />
                <Setter Property="Control.Foreground" Value="Blue" />
            </Style>
        </Button.Style>
    
        Button with Local Style
    </Button>
</Window>