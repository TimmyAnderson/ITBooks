<div class="OUTER_BOX">
	<table class="table table-bordered table-striped">
		<tr>
			<th>ID</th>
			<th>First name</th>
			<th>Last name</th>
			<th>Age</th>
			<th>Sex</th>
		</tr>

		@foreach(CChild Child in Children)
		{
			<!-- !!! Pouzije sa KEYWORD [key], aby HTML ELEMENT [<tr>] NEBOL pri RERENDERING REUSED, ak sa hodnoty KEYS ROZDIELNE. -->
			<tr @key="Child.ID">
				<td>
					[@Child.ID]
				</td>
						
				<td>
					[@Child.FirstName]
				</td>
						
				<td>
					[@Child.LastName]
				</td>
						
				<td>
					[@Child.Age]
				</td>
						
				<td>
					[@Child.Sex] !
				</td>
			</tr>
		}
	</table>
</div>