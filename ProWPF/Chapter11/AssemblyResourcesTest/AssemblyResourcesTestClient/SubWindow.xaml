<Window x:Class="AssemblyResourcesTestClient.SubWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AssemblyResourcesTestClient" Height="300" Width="300">
  <StackPanel>
    <StackPanel.Background>
      <!-- Skratena syntax. -->
      <ImageBrush ImageSource="Images/Celestial.jpg"/>
    </StackPanel.Background>
    <Button Width="100" Height="50">
      <!-- Standardna syntax. -->
      <!-- Uvodny znak '/' pred Images MUSI BYT. -->
      <Image Source="pack://application:,,,/Images/RedX.jpg"/>
    </Button>
    <Button Width="100" Height="50">
      <!-- Standardna syntax. -->
      <!-- Uvodny znak '/' pred AssemblyResourcesTestLibrary MUSI BYT. -->
      <Image Source="pack://application:,,,/AssemblyResourcesTestLibrary;component/LibImages/SadFace.jpg"/>
    </Button>
  </StackPanel>
</Window>