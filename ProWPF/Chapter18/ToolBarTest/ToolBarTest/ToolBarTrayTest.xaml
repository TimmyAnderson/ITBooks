<Window x:Class="ToolBarTest.ToolBarTrayTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ToolBarTest" Height="300" Width="300">
  <StackPanel>
    <ToolBarTray>
      <ToolBar Name="MToolBar1">
        <Button>One</Button>
        <Button>Two</Button>
        <Button>Three</Button>
      </ToolBar>
      <ToolBar Name="MToolBar2">
        <Button>A</Button>
        <Button>B</Button>
        <Button>C</Button>
      </ToolBar>
      <!-- !!! Patri do inej Band. -->
      <ToolBar Name="MToolBar3" Band="1">
        <Button>Red</Button>
        <Button>Blue</Button>
        <Button>Green</Button>
        <Button>Black</Button>
      </ToolBar>
    </ToolBarTray>

    <Label Content="Some Text !"/>
    <Button Click="OnClick" Content="Show Bands"/>
  </StackPanel>
</Window>