<Window x:Class="CanvasAndInkCanvasTest.MainWindow2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="CanvasAndInkCanvasTest" Height="300" Width="300">
  <Canvas>
    <Button Canvas.Left="10" Canvas.Top="10">Button 1 (10,10)</Button>
    <Button Canvas.Left="120" Canvas.Top="30">Button 2 (120,30)</Button>
    <!-- Nastavim ZIndex. -->
    <Button Canvas.ZIndex="1" Canvas.Left="60" Canvas.Top="80" Width="50" Height="50">
      Button 3 (60,80)
    </Button>
    <Button Canvas.Left="70" Canvas.Top="120" Width="100" Height="50">
      Button 4 (70,120)
    </Button>
  </Canvas>
</Window>