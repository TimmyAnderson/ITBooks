<!-- !!! Nastavi sa ROUTE na ktorej je COMPONENT pristupna. -->
@page "/BlazorAuthorizeViewCounterComponent"

<div class="OUTER_BOX">
	<h1>User [@UserName] !</h1>
	<h2>For ALL USERS !</h2>
	<div class="INNER_BOX">
		<label>Counter value [@Counter] !</label>
	</div>

	<button class="btn btn-primary" @onclick="IncrementCounter">Increment counter</button>

	<!-- !!! BLAZOR COMPONENT zobrazuje HTML CONTENT na zaklade toho ci USER je MEMBER ROLE 'Administrators'. -->
	<AuthorizeView Roles="Administrators">
		<Authorized>
			<div class="INNER_BOX">
				This CONTENT is VISIBLE just to MEMBERS of ROLE 'Administrators' !
			</div>
		</Authorized>

		<NotAuthorized>
			<div class="INNER_BOX">
				CONTENT accessible ONLY to MEMBERS of ROLE 'Administrators' CANNOT be SEEN !
			</div>
		</NotAuthorized>
	</AuthorizeView>

	<!-- !!! BLAZOR COMPONENT zobrazuje HTML CONTENT na zaklade toho ci USER je MEMBER ROLE 'Users'. -->
	<AuthorizeView Roles="Users">
		<Authorized>
			<div class="INNER_BOX">
				This CONTENT is VISIBLE just to MEMBERS of ROLE 'Users' !
			</div>
		</Authorized>

		<NotAuthorized>
			<div class="INNER_BOX">
				CONTENT accessible ONLY to MEMBERS of ROLE 'Users' CANNOT be SEEN !
			</div>
		</NotAuthorized>
	</AuthorizeView>
</div>