<Window x:Class="ColorsTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ColorsTest" Height="300" Width="300">
  <StackPanel>
    <Button Name="MButton1" Content="Button" Background="Red"/>
    <Button Name="MButton2" Content="Button"/>
    <Button Name="MButton3" Content="Button"/>
    <Button Name="MButton4" Content="Button"/>
    <Canvas Background="LightGreen" Height="50">
      <Border Canvas.Left="0" Canvas.Top="5" Width="200" Height="30" BorderBrush="Green" BorderThickness="5"/>
      <Button Margin="10" Name="MButton5" Content="Button" Width="200"/>
    </Canvas>
    <Button Name="MButton6" Content="Button" Background="#0000FF"/>
  </StackPanel>
</Window>