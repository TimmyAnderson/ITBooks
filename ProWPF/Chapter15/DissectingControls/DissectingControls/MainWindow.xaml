<Window x:Class="DissectingControls.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="DissectingControls" Height="550" Width="720" Loaded="Window_Loaded">
  <Grid Margin="10" Name="MGrid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <ListBox DisplayMemberPath="Name" Name="MLSTTypes" SelectionChanged="MLSTTypes_SelectionChanged"/>
    <TextBox Grid.Column="1" Name="MTXTTemplate" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" FontFamily="Consolas"/>
  </Grid>
</Window>