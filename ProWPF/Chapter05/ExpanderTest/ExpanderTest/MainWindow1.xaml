<Window x:Class="ExpanderTest.MainWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ExpanderTest" Height="300" Width="300">
  <ScrollViewer>
    <StackPanel>
      <Expander Header="XYZ 1" ExpandDirection="Down">
        <StackPanel>
          <Button Content="Button 1"/>
          <Button Content="Button 2"/>
          <Button Content="Button 3"/>
        </StackPanel>
      </Expander>
      <Expander Header="XYZ 3" ExpandDirection="Up">
        <StackPanel>
          <Button Content="Button 1"/>
          <Button Content="Button 2"/>
          <Button Content="Button 3"/>
        </StackPanel>
      </Expander>
      <Expander Header="XYZ 4" ExpandDirection="Left">
        <StackPanel>
          <Button Content="Button 1"/>
          <Button Content="Button 2"/>
          <Button Content="Button 3"/>
        </StackPanel>
      </Expander>
      <Expander Header="XYZ 2" ExpandDirection="Right">
        <StackPanel>
          <Button Content="Button 1"/>
          <Button Content="Button 2"/>
          <Button Content="Button 3"/>
        </StackPanel>
      </Expander>
    </StackPanel>
  </ScrollViewer>    
</Window>