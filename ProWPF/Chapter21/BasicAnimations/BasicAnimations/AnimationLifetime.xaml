<Window x:Class="BasicAnimations.AnimationLifetime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BasicAnimations" Height="300" Width="300">
  <StackPanel>
    <Button Name="MButton1" Width="160" MouseEnter="OnMouseEnter1" Click="OnClick1" Content="No Animation Reverse"/>
    <Button Name="MButton2" Width="160" MouseEnter="OnMouseEnter2" Click="OnClick2" Content="Clear Value"/>
    <Button Name="MButton3" Width="160" MouseEnter="OnMouseEnter3" Click="OnClick3" MouseRightButtonDown="OnRightButtonDown3" Content="Reverse Animation"/>
    <Button Name="MButton4" Width="160" MouseEnter="OnMouseEnter4" Click="OnClick4" Content="AutoReverse Animation"/>
    <Button Name="MButton5" Width="160" MouseEnter="OnMouseEnter5" Click="OnClick5" Content="FillBehavior to Stop"/>
    <Button Name="MButton6" Width="160" MouseEnter="OnMouseEnter6" Click="OnClick6" Content="Completed Event"/>

    <Button Click="OnShowWidth" Content="Show Widths"/>
  </StackPanel>
</Window>