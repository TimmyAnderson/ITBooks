<Window x:Class="EAP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="400" Width="600" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Label Grid.Row="0" Content="Log:"/>
        <ListBox Grid.Row="1" Name="LBXListBox"/>
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <Button Name="BUTStartActionTimmy" Content="START Timmy" Click="BUTStartActionTimmy_Click"/>
            <Button Name="BUTStartActionJenny" Content="START Jenny" Click="BUTStartActionJenny_Click"/>

            <Button Name="BUTCancelActionTimmy" Content="CANCEL Timmy" Click="BUTCancelActionTimmy_Click"/>
            <Button Name="BUTCancelActionJenny" Content="CANCEL Jenny" Click="BUTCancelActionJenny_Click"/>

            <Button Name="BUTExceptionActionTimmy" Content="EXCEPTTION Timmy" Click="BUTExceptionActionTimmy_Click"/>
            <Button Name="BUTExceptionActionJenny" Content="EXCEPTTION Jenny" Click="BUTExceptionActionJenny_Click"/>
        </StackPanel>
    </Grid>
</Window>