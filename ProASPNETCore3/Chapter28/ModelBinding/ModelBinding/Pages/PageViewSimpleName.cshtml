@page
@model ModelBinding.Pages.PageViewSimpleNameModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="~/StaticFiles/Styles/Styles.css" />
	<link rel="stylesheet" href="~/StaticFiles/ClientLibraries/Bootstrap/dist/css/bootstrap.css" />
    <title>PageViewSimpleChildren</title>
</head>
<body>
	<div class="OUTER_BOX">
		<table class="table table-bordered table-striped">
			<tr>
				<th>INDEX</th>
				<th>NAME</th>
			</tr>

			@for(int Index=0;Index<@Model.Names.Length;Index++)
			{
				<tr>
					<th>
						@(Index+1)
					</th>
						
					<td>
						[@Model.Names[Index]] !
					</td>
				</tr>
			}
		</table>
	</div>
</body>
</html>