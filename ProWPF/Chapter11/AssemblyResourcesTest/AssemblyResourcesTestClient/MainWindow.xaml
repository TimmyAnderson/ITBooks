<Window x:Class="AssemblyResourcesTestClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="AssemblyResourcesTestClient" Height="300" Width="300">
  <StackPanel>
    <Button Click="OnButton1Click" Content="Use GetResourceStream() to get Resource Celestial.jpg"/>
    <Button Click="OnButton2Click" Content="Use ResourceManager to get Resource Celestial.jpg"/>
    <Button Click="OnButton3Click" Content="Use ResourceManager to get ALL resources"/>
    <Button Click="OnButton4Click" Content="Show SubWindow"/>
    <MediaElement Name="MSound" Source="Sounds/Start.wav" LoadedBehavior="Manual"/>
    <ToggleButton Name="MToggleButton" Click="OnToggleButtonClick" Content="Play\Stop Sound"/>
  </StackPanel>
</Window>