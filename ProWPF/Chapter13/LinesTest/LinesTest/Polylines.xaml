<Window x:Class="LinesTest.Polylines"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="LinesTest" Height="550" Width="500">
  <Grid ShowGridLines="True">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    
    <Canvas Grid.Row="0">
      <!-- Mozem X a Y oddelovat medzerou rovanko ako jednotlive Points. -->
      <!-- Pridal som Fill. -->
      <Polyline Fill="Yellow" Stroke="Blue" StrokeThickness="5" Points="10 150 30 140 50 160 70 130 90 170 110 120 130 180 150 110 170 190 190,100 210 240"/>
    </Canvas>

    <Canvas Grid.Row="1">
      <!-- Mozem X a Y oddelovat ciarkou a jednotlive Points medzerou. -->
      <Polyline Stroke="Blue" StrokeThickness="5" Points="10,150 30,140 50,160 70,130 90,170 110,120 130,180 150,110 170,190 190,100 210,240"/>
    </Canvas>    
  </Grid>
</Window>