<Window x:Class="CustomControlsClient.CColorPicker1Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lib="clr-namespace:CustomControlsUCLibrary;assembly=CustomControlsUCLibrary"
    Title="CColorPicker1Window" Height="300" Width="300">
    <StackPanel>
        <lib:CColorPicker1 Name="MColorPicker" Color="Beige" ColorChanged="ColorPicker_ColorChanged"/>
        <Label Name="MLBLColor"/>
        <Button Command="Undo" CommandTarget="{Binding ElementName=MColorPicker}" Content="Undo"/>
    </StackPanel>
</Window>