@{
	Layout=null;
}

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="~/StaticFiles/Styles/Styles.css" />
	<link rel="stylesheet" href="~/StaticFiles/ClientLibraries/Bootstrap/dist/css/bootstrap.css" />
	<title>Index</title>
</head>
<body>
	<div class="OUTER_BOX">
		<!-- !!! HTML ATTRIBUTES TAG HELPER [FormTagHelper] definuje CONTROLLER a ACTION METHOD, ktora spracuje POSTBACK. -->
		<form id="MyForm" method="post" asp-controller="UseFormTagHelpers" asp-action="UseFormAttributesCallback">
			<div class="form-group">
				<label for="FirstName">First name:</label>
				<input class="form-control" name="FirstName"/>
			</div>

			<div class="form-group">
				<label for="LastName">Last name:</label>
				<input class="form-control" name="LastName"/>
			</div>

			<div class="form-group">
				<label for="Age">Age:</label>
				<input class="form-control" name="Age"/>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-sm btn-primary">Add name</button>
			</div>
		</form>

		<div class="form-group">
			<!-- !!!!! BUTTON, ktory je MIMO HTML ELEMENT [<form>] MUSI mat referenciu na FORM pod ktory patri pomocou HTML ATTRIBUTE [form]. Zaroven pomocou HTML ATTRIBUTE [asp-controller] a HTML ATTRIBUTE [asp-action] sa musi odkazovat na CONTROLLER a ACTION METHOD, ktore maju FORM DATA spracovat. -->
			<button form="MyForm" asp-controller="UseFormTagHelpers" asp-action="UseFormAttributesCallback" type="submit" class="btn btn-sm btn-primary">Add name (OUT of FORM)</button>
		</div>
	</div>
</body>
</html>