<Window x:Class="FrameAnimation.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="FrameAnimation" Height="400" Width="400">
  <Grid Margin="3">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal">
      <Button Margin="3" Padding="3" Click="CmdStart_Clicked">Start</Button>
      <Button Margin="3" Padding="3" Click="CmdStop_Clicked">Stop</Button>
    </StackPanel>
    <Canvas Name="MCanvas" Grid.Row="1" Margin="3"/>
  </Grid>
</Window>