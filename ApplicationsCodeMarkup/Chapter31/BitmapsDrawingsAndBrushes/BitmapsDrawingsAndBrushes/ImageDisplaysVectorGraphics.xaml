<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         x:Class="BitmapsDrawingsAndBrushes.ImageDisplaysVectorGraphics">
    <Image Stretch="None">
        <Image.Source>
            <DrawingImage>
                <DrawingImage.Drawing>
                    <!-- Brush definuje FARBU VYPLNE. -->
                    <GeometryDrawing Brush="Blue">
                        <!-- Definuje FARBU CIARY. -->
                        <GeometryDrawing.Pen>
                            <Pen Brush="Red" Thickness="5" />
                        </GeometryDrawing.Pen>

                        <!-- Definuje GEOMETRIU, teda BODY, ktore sa budu vykreslovat. -->
                        <GeometryDrawing.Geometry>
                            <EllipseGeometry Center="0 0" RadiusX="50" RadiusY="50" />
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingImage.Drawing>
            </DrawingImage>
        </Image.Source>
    </Image>
</Window>