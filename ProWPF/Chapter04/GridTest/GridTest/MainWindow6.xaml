<Window x:Class="GridTest.MainWindow6"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="GridTest" Height="500" Width="500">
  <Grid ShowGridLines="True">
    <Grid.ColumnDefinitions>
      <!-- Proporcna sirka. -->
      <ColumnDefinition Width="*"/>
      <!-- Pevne stanovena sirka. -->
      <ColumnDefinition Width="50"/>
      <!-- 2* Proporcna sirka. -->
      <ColumnDefinition Width="2*"/>
      <!-- Podla Content definovana sirka. -->
      <ColumnDefinition Width="Auto"/>
      <!-- 2* Proporcna sirka. -->
      <ColumnDefinition Width="2*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <!-- Pevne stanovena vyska. -->
      <RowDefinition Height="100"/>
      <!-- Proporcna vyska. -->
      <RowDefinition Height="*"/>
      <!-- Podla Content definovana vyska. -->
      <RowDefinition Height="Auto"/>
      <!-- 2* Proporcna vyska. -->
      <RowDefinition Height="2*"/>
      <!-- 3* Proporcna vyska. -->
      <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>
    <Button Grid.Column="3" Grid.Row="2" Content="Hello World :) !"/>
  </Grid>
</Window>