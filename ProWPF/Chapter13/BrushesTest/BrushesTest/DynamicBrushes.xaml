<Window x:Class="BrushesTest.DynamicBrushes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BrushesTest" Height="300" Width="300">
  <StackPanel>
    <!-- Background. -->
    <Button Name="MButton1" Content="Sample Button">
      <Button.Background>
        <SolidColorBrush Color="Red"/>
      </Button.Background>
    </Button>

    <!-- Foreground. -->
    <Button Name="MButton2" Content="Sample Button">
      <Button.Foreground>
        <SolidColorBrush Color="Green"/>
      </Button.Foreground>
    </Button>

    <Ellipse Name="MEllipse" Stroke="Blue" Fill="Blue" Width="100" Height="100"/>

    <Button Click="OnClick" Content="Color Change"/>
  </StackPanel>
</Window>