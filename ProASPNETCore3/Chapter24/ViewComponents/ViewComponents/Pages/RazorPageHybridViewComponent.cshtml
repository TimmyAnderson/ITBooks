@page

@using ViewComponents.Model
@model ViewComponents.Pages.RazorPageHybridViewComponent

<!-- !!!!! Tento RAZOR PAGE VIEW sa pouziva vtedy, ak RAZOR PAGE, ktora je zaroven aj VIEW COMPONENT je pouzita ako RAZOR PAGE. Ak je RAZOR PAGE pouzita ako VIEW COMPONENT, tak sa tento RAZOR PAGE VIEW NEZOBRAZI. -->

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="~/StaticFiles/Styles/Styles.css" />
	<link rel="stylesheet" href="~/StaticFiles/ClientLibraries/Bootstrap/dist/css/bootstrap.css" />
	<title>View Name</title>
</head>
<body>
	<div class="OUTER_BOX">
		<table class="table table-bordered table-striped">
			<tr>
				<th>ID</th>
				<th>First name</th>
				<th>Last name</th>
				<th>Age</th>
			</tr>

			@foreach(CName Name in @Model.Names)
			{
				<tr>
					<th>
						@Name.ID
					</th>
						
					<td>
						[@Name.FirstName]
					</td>
						
					<td>
						[@Name.LastName]
					</td>
						
					<td>
						[@Name.Age] !
					</td>
				</tr>
			}
		</table>
	</div>
</body>
</html>