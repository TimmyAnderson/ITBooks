<Window x:Class="BasicAnimations.RepeatBehavior"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BasicAnimations" Height="300" Width="300">
  <StackPanel>
    <Button Name="MButton1" Width="160" MouseEnter="OnMouseEnter1" Content="Repeat 2 times"/>
    <Button Name="MButton2" Width="160" MouseEnter="OnMouseEnter2" Content="Repeat 2 times with AutoRepeat"/>
    <Button Name="MButton3" Width="160" MouseEnter="OnMouseEnter3" Content="Repeat 13 seconds"/>
    <Button Name="MButton4" Width="160" MouseEnter="OnMouseEnter4" Content="Repeat Forever"/>
  </StackPanel>
</Window>