<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                x:Class="WPFBinding.BindingWithMarkupExtensionSyntax">
    <StackPanel>
        <!-- Source pre BINDING. -->
        <ScrollBar Name="MScroll" Orientation="Horizontal" Margin="24" Maximum="100" LargeChange="10" SmallChange="1" />

        <!-- Target pre BINDING. Pouziva sa MARKUP EXTENSION syntax. -->
        <Label HorizontalAlignment="Center" Content="{Binding ElementName=MScroll, Path=Value}" />
    </StackPanel>
</Window>