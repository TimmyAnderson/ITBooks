@page
@model UsingFormTagHelpers.Pages.UseFormTagHelperPageModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
	<link rel="stylesheet" href="~/StaticFiles/Styles/Styles.css" />
	<link rel="stylesheet" href="~/StaticFiles/ClientLibraries/Bootstrap/dist/css/bootstrap.css" />
    <title>UseFormTagHelperPage</title>
</head>
<body>
	<div class="OUTER_BOX">
		<!-- !!! TAG HELPER [FormTagHelper] definuje PAGE, ktora spracuje FOR DATA. -->
		<!-- !!! HTML ATTRIBUTE [asp-page] definuje RAZOR PAGE, ktora spracuje FORM DATA. -->
		<!-- !!! HTML ATTRIBUTE [asp-page-handler] definuje nazov HANDLER, ktora spracuje FORM DATA. -->
		<form id="MyForm" method="post" asp-page="UseFormTagHelperPage" asp-page-handler="MyHandler">
			@Html.AntiForgeryToken()

			<div class="form-group">
				<!-- !!! Pri referovani na PROPERTY CLASS 'CPageName' je nutne ist cez CUSTOM PROPERTY 'PageName'. -->
				<label asp-for="PageName.FirstName">First name:</label>
				<input class="form-control" asp-for="PageName.FirstName"/>
			</div>

			<div class="form-group">
				<!-- !!! Pri referovani na PROPERTY CLASS 'CPageName' je nutne ist cez CUSTOM PROPERTY 'PageName'. -->
				<label asp-for="PageName.LastName">Last name:</label>
				<input class="form-control" asp-for="PageName.LastName"/>
			</div>

			<div class="form-group">
				<!-- !!! Pri referovani na PROPERTY CLASS 'CPageName' je nutne ist cez CUSTOM PROPERTY 'PageName'. -->
				<label asp-for="PageName.Age">Age:</label>
				<input class="form-control" asp-for="PageName.Age" value=""/>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-sm btn-primary">Add name</button>
			</div>
		</form>

		<div class="form-group">
			<!-- !!!!! BUTTON, ktory je MIMO HTML ELEMENT [<form>] MUSI mat referenciu na FORM pod ktory patri pomocou HTML ATTRIBUTE [form]. Zaroven pomocou HTML ATTRIBUTE [asp-page] a HTML ATTRIBUTE [asp-page-handler] sa musi odkazovat na PAGE a PAGE HANDLER, ktore maju FORM DATA spracovat. -->
			<button form="MyForm" asp-page="UseFormTagHelperPage" asp-page-handler="MyHandler" type="submit" class="btn btn-sm btn-primary">Add name (OUT of FORM)</button>
		</div>
	</div>
</body>
</html>