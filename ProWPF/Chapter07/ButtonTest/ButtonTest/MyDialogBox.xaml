<Window x:Class="ButtonTest.MyDialogBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="ButtonTest" Height="300" Width="300">
  <StackPanel>
    <Label Content="Some Text:"/>
    <TextBox Text="This is a TextBox !"/>
    <TextBox Text="This is a TextBox with AcceptReturn set to TRUE !" AcceptsReturn="True"/>
    <StackPanel>
      <Button Content="_OK" IsDefault="True" Click="OnOKClick"/>
      <Button Content="_Cancel" IsCancel="True" Click="OnCancelClick"/>
    </StackPanel>      
  </StackPanel>
</Window>