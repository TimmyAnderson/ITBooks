<ResourceDictionary 
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="clr-namespace:MySharedResources">
    <!-- Musim definovat Key cez ComponentResourceKey. -->
    <!-- !!!!! Tu vsak uz MUSIM POUZIT SHORT PATH, bez component a assembly name, inak to nezerie. -->
  <ImageBrush x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:CMyClassForSharedResources},ResourceId=MSharedRes1}" ImageSource="Images/SadFace.jpg"/>
  <local:CMySimpleText x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type local:CMyClassForSharedResources},ResourceId=MSharedRes2}" SimpleText="Timmy"/>
</ResourceDictionary>