<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:src="clr-namespace:AccessStaticFields"
        x:Class="AccessStaticFields.AccessStaticFields"
        Title="Access Static Fields"
        SizeToContent="WidthAndHeight">
    <!-- Odkazujem sa na STATICKE PROPERTIES definovane v triede CConstants. -->
    <TextBlock  Background="{x:Static src:CConstants.MBrush}" FontSize="{x:Static src:CConstants.FontSize}" TextAlignment="Center">
        <TextBlock.FontFamily>
            <x:Static Member="src:CConstants.MFontFamily" /> 
        </TextBlock.FontFamily>
            Properties from<LineBreak />Static Fields !
    </TextBlock>
</Window>