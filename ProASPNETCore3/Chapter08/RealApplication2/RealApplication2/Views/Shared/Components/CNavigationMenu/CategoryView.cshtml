@model string[]

<!-- Zobrazi LINK na HOME PAGE. -->
<a class="btn btn-block btn-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">
    Home
</a>

<!-- !!! Zobrazi zoznam CATEGORIES, pricom jednotlive LINKS vykonaju FILTERING PRODUCTS podla danej CATEGORY. -->
@foreach (string Category in Model)
{
	<a class="btn btn-block @(Category==ViewBag.SelectedCategory ? "btn-primary": "btn-secondary")"
		asp-action="Index"
		asp-controller="Home"
		asp-route-category="@Category"
		asp-route-productPage="1">
        @Category
    </a>
}