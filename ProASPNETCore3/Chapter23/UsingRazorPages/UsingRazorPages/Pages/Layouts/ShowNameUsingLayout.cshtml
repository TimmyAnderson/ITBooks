	// !!! Nastavi sa pouzitie LAYOUT.
    Layout = "_Layout";
}

<table class="table table-bordered table-striped">
	<tr>
		<th>ID</th>
		<th>First name</th>
		<th>Last name</th>
		<th>Age</th>
	</tr>

	<tr>
		<th>
			@Model.Name.ID
		</th>
						
