<Page x:Class="PageInPage.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainPage">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    
    <Frame Grid.Column="0" Grid.Row="0" Source="SPL1_1.xaml" BorderBrush="Blue" BorderThickness="1"/>
    <Frame Grid.Column="1" Grid.Row="0" Source="SPL1_2.xaml" BorderBrush="Red" BorderThickness="1"/>
    <!-- Maju vlastny zurnal. -->
    <Frame Grid.Column="0" Grid.Row="1" Source="SPL1_1.xaml" JournalOwnership="OwnsJournal" BorderBrush="Blue" BorderThickness="1"/>
    <Frame Grid.Column="1" Grid.Row="1" Source="SPL1_2.xaml" JournalOwnership="OwnsJournal" BorderBrush="Red" BorderThickness="1"/>
  </Grid>
</Page>