<Window x:Class="PathAndGeometriesTest.SimpleGeometries"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="PathAndGeometriesTest" Height="400" Width="300">
  <Grid ShowGridLines="True">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>

    <!-- Ukazka jednoduchych geometries. -->
    <Path Grid.Row="0" Fill="Yellow" Stroke="Blue">
      <Path.Data>
        <RectangleGeometry Rect="0,0 100,50"/>
      </Path.Data>
    </Path>

    <Path Grid.Row="1" Fill="Yellow" Stroke="Blue">
      <Path.Data>
        <LineGeometry StartPoint="0,0" EndPoint="10,100"/>
      </Path.Data>
    </Path>

    <Path Grid.Row="2" Fill="Yellow" Stroke="Blue">
      <Path.Data>
        <EllipseGeometry RadiusX="50" RadiusY="25" Center="50,25"/>
      </Path.Data>
    </Path>    
  </Grid>
</Window>